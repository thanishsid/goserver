# Main Schema
schema {
	query: Queries
	mutation: Mutations
}

type Queries {
	myInfo: MyInfo! @authorize(object: "user", action: "get_my_info")

	roles: [Role!]! @authorize(object: "role", action: "get_all")
}

type Mutations {
	UploadImage(file: Upload!, title: String): Image!
		@authorize(object: "image", action: "upload")
}
